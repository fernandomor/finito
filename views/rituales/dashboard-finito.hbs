<div class="py-4 px-8 max-w-md mx-auto space-y-0 ">
<h1 class="text-3xl font-extrabold text-gray-900">Hola {{name}}</h1>
<p class="mt-1 text-lg text-gray-500">Aqui podemos ver tu progreso del día</p>
</div>


{{#each userrituales}}
<div class="mt-5 py-4 px-8 max-w-sm mx-auto bg-white rounded-xl shadow-md flex space-y-0 space-x-6">
  <div class="text-left space-y-2 sm:text-left">
    <div class="space-y-0.5">
      <p class="text-lg text-black font-bold">
        {{ritualName}}
      </p>
      {{#each record}}
      <p><b>Fecha inicial</b> {{dateInit}}</p>
      <p><b>Fecha final</b>   {{dateFinal}}</p>
      <p><b>Tiempo usado </b> {{tiempoUsado}}</p>
      {{/each}}
      <p><b>Meta final</b> : {{numMax}}</p>
      <p><b>Meta de hoy</b> : {{numActual}}</p>
    </div>
  </div>
</div>
{{/each}}

<div class="flex">
<a class="mt-5 py-4 px-8  mx-auto text-sm font-medium rounded-md text-white bg-black hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" href="/daily">Ver retos del día</a>
</div>